+
+	CP	BF_SYSSET_TIMERINC
+	JP	Z,SYS_TIMERINC
+
 	CP	BF_SYSSET_BOOTINFO
 	JR	Z,SYS_SETBOOTINFO
 	OR	$FF			; SIGNAL ERROR
@@ -2611,6 +2615,22 @@ SYS_SETTIMER:
 	XOR	A
 	RET
 ;
+; INC TIMER
+;   SIMULATE A TIMER INT
+;
+SYS_TIMERINC:
+	PUSH	DE
+	HB_DI
+	CALL	HB_TIMINT
+	HB_EI
+
+	POP	DE
+	DEC	D
+	JR	NZ, SYS_TIMERINC
+
+	XOR	A
+	RET
+;
